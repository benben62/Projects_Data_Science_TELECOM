public class CopyBytes {
    /**
     * @param args
     * @throws IOException
     */
    public static void main(String[] args) throws IOException {
        FileReader in = null;
        FileWriter out = null;
 
        try {
            in = new FileReader("py1.txt");
            out = new FileWriter("py2.txt");
            char[] buff = new char[3];
            int c;
            char d;
           // int d;
            while ((c = in.read(buff, 0 ,3)) != -1) {
            	d=(char) c;
                out.write(c);
                System.out.println(buff);
            }
        } finally {
            if (in != null) {
                in.close();
            }
            if (out != null) {
                out.close();
            }
        }
    }
}
