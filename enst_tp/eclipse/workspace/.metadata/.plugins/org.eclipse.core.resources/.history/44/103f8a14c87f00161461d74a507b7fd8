public class ThreadTest extends Thread{
	int i=0;
	int id=0;
	public ThreadTest(int p=0)
	{
		id=p;
	}	
	public void run()
	{
		if(id==1){
			try {
				out1();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}else if(id==2){
			try {
				out2();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
		}else if(id==3){
			try {
				out3();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		else {
			System.out.println("error!");
		}
	}
	public synchronized void out1() throws InterruptedException{
		i++;//如果不能打断 现应该都显示0
		sleep(1000);
		i--;
		System.out.println("This is Thread "+ i);
	}
	public synchronized void out2() throws InterruptedException{
		i++;
		sleep(1000);

		i--;
		System.out.println("This is Thread "+ i);
	}
	public synchronized void out3() throws InterruptedException{
		i++;
		sleep(1000);

		i--;
		System.out.println("This is Thread "+ i);
	}
}
